<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:orientation="horizontal">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TEAM A"
        android:textAlignment="center"
        android:layout_weight="1" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TEAM B"
        android:textAlignment="center"
        android:layout_weight="1" />
    </LinearLayout>
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/scoreBoard">
    <TextView
        android:id="@+id/scoreA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0"
        android:textAlignment="center"
        android:layout_weight="1" />

        <TextView
            android:id="@+id/scoreB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0"
            android:textAlignment="center" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/score3points">
        <Button
            android:id="@+id/scoreBtn1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="+1 POINT1"
            android:textAlignment="center"
            android:layout_weight="1" />

        <Button
            android:id="@+id/scoreBtn2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="+1 POINT"
            android:textAlignment="center" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/score2Points">
        <Button
            android:id="@+id/scoreBtn3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="+2 POINTS"
            android:textAlignment="center"
            android:layout_weight="1" />

        <Button
            android:id="@+id/scoreBtn4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="+2 POINTS"
            android:textAlignment="center" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/score1Point">
        <Button
            android:id="@+id/scoreBtn5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="+1 POINTS"
            android:textAlignment="center"
            android:layout_weight="1" />

        <Button
            android:id="@+id/scoreBtn6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="+1 POINTS"
            android:textAlignment="center" />
    </LinearLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnReset"
        android:text="center"
        android:layout_gravity="center_horizontal"
        />
</LinearLayout>