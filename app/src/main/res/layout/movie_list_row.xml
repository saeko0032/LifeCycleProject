<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/for_16"
    android:orientation="vertical"
    android:weightSum="1">

    <android.support.v7.widget.CardView
        android:id="@+id/cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        card_view:cardCornerRadius="20sp"
        card_view:contentPadding="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/movie_image_imageview"
                android:layout_width="104dp"
                android:layout_height="104dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/for_16"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="1">

                    <TextView
                        android:id="@+id/movie_title_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="MOVIE TITLE"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_weight="1.01" />

                    <CheckBox
                        android:id="@+id/checkBox"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="right"
                        android:gravity="right|center_vertical"
                        android:onClick="oCheckBoxPressed"
                        android:text=""
                        android:textAlignment="viewEnd" />
                </LinearLayout>

                <TextView
                    android:id="@+id/movie_genre_textview"
                    android:layout_width="142dp"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:text="GENRE"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/movie_years_textView"
                    android:layout_width="167dp"
                    android:layout_height="wrap_content"
                    android:text="YEARS"
                    android:textSize="12sp" />

            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>